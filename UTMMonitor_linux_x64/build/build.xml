<?xml version="1.0" encoding="UTF-8"?>
	<project name="UTMMonitor" default="do-deploy" basedir="."  xmlns:fx="javafx:com.sun.javafx.tools.ant">
	<property name="java.sdk" location="c:\Java\jdk1.8.0_73" />
	<property name="launch4j.dir" location="c:\Program Files\launch4j"/>
	<target name="init-fx-tasks">
		<path id="fxant">
			<filelist>
				<file name="${java.sdk}\lib\ant-javafx.jar" />
				<file name="${java.home}\lib\ext\jfxrt.jar"/>
			</filelist>
		</path>
	
		<taskdef resource="com/sun/javafx/tools/ant/antlib.xml"
			uri="javafx:com.sun.javafx.tools.ant"
			classpathref="fxant"/>
	</target>
	<target name="setup-staging-area">
		<delete dir="externalLibs" />
		<delete dir="project" />
		<delete dir="projectRefs" />
	
		<mkdir dir="externalLibs" />
	
		<copy todir="externalLibs">
			<fileset dir="..\libs">
				<filename name="libusb4java-1.2.0-linux-x86_64.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="..\libs">
				<filename name="usb4java-1.2.0.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="..\libs">
				<filename name="commons-lang3-3.2.1.jar"/>
			</fileset>
		</copy>
	
		<mkdir dir="project" />
		<copy todir="project">
			<fileset dir="D:\Projects\workspace\UTMMonitor">
				<include name="src/**" />
			</fileset>
		</copy>
	
		<mkdir dir="projectRefs" />
	</target>
		
	<target name='do-compile'>
		<delete dir="build" />
		<mkdir dir="build/src" />
		<mkdir dir="build/libs" />
		<mkdir dir="build/classes" />
	
		<!-- Copy project-libs references -->
		<copy todir="build/libs">
			<fileset dir="externalLibs">
				<include name="libusb4java-1.2.0-windows-x86_64.jar"/>
				<include name="usb4java-1.2.0.jar"/>
				<include name="commons-lang3-3.2.1.jar"/>
			</fileset>
		</copy>
	
		<!-- Copy project references -->
	
		<!-- Copy project sources itself -->
		<copy todir="build/src">
			<fileset dir="project/src">
				<include name="**/*"/>
			</fileset>
		</copy>
	
		<javac includeantruntime="false" source="1.8" target="1.8" srcdir="build/src" destdir="build/classes" encoding="Cp1251">
			<classpath>
				<fileset dir="build/libs">
					<include name="*"/>
				</fileset>
			</classpath>
		</javac>
	
		<!-- Copy over none Java-Files -->
		<copy todir="build/classes">
		<fileset dir="project/src">
			<exclude name="**/*.java"/>
		</fileset>
		</copy>
	
	
	</target>
	<target name="do-deploy" depends="setup-staging-area, do-compile, init-fx-tasks">
		<delete file="dist"/>
		<delete file="deploy" />
	
		<mkdir dir="dist" />
		<mkdir dir="dist/libs" />
		<mkdir dir="dist/archives" />
	
		<copy todir="dist/libs">
			<fileset dir="externalLibs">
				<include name="*" />
			</fileset>
		</copy>
	
		<copy todir="build/classes/madmax/UTMMonitor">
			<fileset dir="../bin/madmax/UTMMonitor">
		  		<include name="application.css" /> 
		  	</fileset>
		 </copy>

		<copy todir="dist">
			<fileset dir="../">
				<include name="config.xml" />
			</fileset>
		</copy>

		<fx:resources id="appRes">
			<fx:fileset dir="dist" includes="UTMMonitor.jar"/>
			<fx:fileset dir="dist" includes="libs/*"/>
		</fx:resources>
	
		<fx:application id="fxApplication"
			name="UTMMonitor"
			mainClass="madmax.UTMMonitor.Main"
		/>
	
		<mkdir dir="build/classes/META-INF" />
	
	
	
		<fx:jar destfile="dist/UTMMonitor.jar">
			<fx:application refid="fxApplication"/>
			<fileset dir="build/classes">
			</fileset>
			<fx:resources refid="appRes"/>
	
			<manifest>
				<attribute name="Implementation-Vendor" value="UTMMonitor"/>
				<attribute name="Implementation-Title" value="UTMMonitor"/>
				<attribute name="Implementation-Version" value="1.0"/>
				<attribute name="JavaFX-Feature-Proxy" value="None"/>
			</manifest>
		</fx:jar>
	
	
		<mkdir dir="deploy" />
		<!-- Need to use ${basedir} because somehow the ant task is calculating the directory differently -->
		<fx:deploy
			embedJNLP="false"
			extension="false"
			includeDT="false"
			offlineAllowed="true"
			outdir="deploy"
			outfile="UTMMonitor" nativeBundles="exe"
			updatemode="background" >
	
			<fx:platform basedir="${java.sdk}"/>
			<fx:info title="UTMMonitor" vendor="UTMMonitor"/>
	
			<fx:application refId="fxApplication"/>
			<fx:resources refid="appRes"/>
		</fx:deploy>
	</target>
	
</project>
